# ============================================
# Variables de Entorno - Producción
# ============================================
# IMPORTANTE: Este es un template, copiar a .env.prod
# y configurar con valores reales
# NUNCA commitear .env.prod al repositorio

# ---- Puertos ----
BACKEND_PORT=8080
DB_PORT=5432

# ---- Base de Datos ----
DB_NAME=clienteapp_prod
DB_USER=prod_user
# CAMBIAR: Usar contraseña fuerte en producción
DB_PASSWORD=CAMBIAR_CONTRASEÑA_SEGURA
DB_URL=jdbc:postgresql://db:5432/clienteapp_prod

# ---- JPA/Hibernate ----
# IMPORTANTE: Usar 'validate' en producción después de migración inicial
DDL_AUTO=validate
SHOW_SQL=false

# ---- OpenAI API ----
# CAMBIAR: Configurar con tu API key de producción
OPENAI_API_KEY=CAMBIAR_API_KEY_PRODUCCION

# ---- Aplicación ----
SPRING_PROFILES=prod
# CAMBIAR: URL del dominio de producción
APP_BASE_URL=https://tu-dominio.com
UPLOAD_DIR=/app/uploads/profile-photos

# ---- Java Options ----
# Ajustar según recursos del servidor
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
